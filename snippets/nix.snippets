snippet shell-flake
{
  description = "Simple shell flake";

  inputs = {
    nixpkgs.url = "github:nixos/nixpkgs?ref=nixos-unstable";
  };
  outputs =
    { self, nixpkgs }:
    let
      system = "x86_64-linux";
      pkgs = import nixpkgs {
        inherit system;
        overlays = [ ];
      };
    in
    {
      devShells.${system}.default = pkgs.mkShell {
        buildInputs = [
			$0
        ];
      };
    };
}
endsnippet
